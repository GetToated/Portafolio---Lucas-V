---
import SectionContainer from './SectionContainer.astro';
---

<SectionContainer class="pb-23" id="contact">
  <h2 class="font-semibold text-2xl mb-7 flex gap-x-3 items-center">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail size-8"><rect width="22" height="16" x="1" y="4" rx="2" ry="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
    Contacta Conmigo
  </h2>
  <div class="max-w-lg mx-auto">
    <form class="space-y-6" action="https://formspree.io/f/mqaqvnoq" method="POST">
      <div>
        <label for="name" class="block text-gray-400 text-sm font-bold mb-2">Nombre</label>
        <input type="text" id="name" name="name" class="shadow-sm bg-gray-800 border border-gray-700 text-gray-400 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Tu nombre" required>
      </div>
      <div>
        <label for="email" class="block text-gray-400 text-sm font-bold mb-2">Correo Electrónico</label>
        <input type="email" id="email" name="email" class="shadow-sm bg-gray-800 border border-gray-700 text-gray-400 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="tu@email.com" required>
      </div>
      <div>
        <label for="message" class="block text-gray-400 text-sm font-bold mb-2">Mensaje</label>
        <textarea id="message" name="message" rows="5" class="shadow-sm bg-gray-800 border border-gray-700 text-gray-400 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Escribe tu mensaje aquí..." required></textarea>
      </div>
      <button type="submit" class="py-3 px-5 text-sm font-medium cursor-pointer text-center text-white rounded-lg bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">Enviar Mensaje</button>
    </form>
  </div>
</SectionContainer>
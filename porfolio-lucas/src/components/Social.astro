---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a href={href} class="rounded-full border-white/10 justify-center  py-2 px-4 bg-white/5  hover:bg-white/10  flex items-center gap-x-2 text-white/90 hover:text-white transition-colors duration-200 hover:scale-105 group">
  <slot />
</a>

<style>
  .group :global(svg) {
    transition: transform 0.2s ease-in-out;
  }
  .group:hover :global(svg) {
    transform: rotate(10deg);
  }
</style>
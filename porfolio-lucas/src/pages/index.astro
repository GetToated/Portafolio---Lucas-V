---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Github from '../components/icons/Github.astro';
import Social from '../components/Social.astro';
import Linkedin from '../components/icons/Linkedin.astro';
import Mail from '../components/icons/Mail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Experienceicon from '../components/icons/Experienceicon.astro';
import Skills from '../components/Skills.astro';
import Projects from '../components/Projects.astro';
import AboutMe from '../components/AboutMe.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Portfolio de Lucas - Desarrollador Frontend" description="dawdaf">
  <main>
    <SectionContainer class="pb-23 pt-20">
      <div class="h1-container">
        <img
          class="rounded-full w-16 h-16 mb-4 mx-auto sm:mx-0"
          src="assets/logo.jpg"
          alt="foto"
        />
        <h1 class="text-white text-4xl md:text-5xl font-bold flex flex-col sm:flex-row gap-y-2 sm:gap-x-4 mb-2 typing-animation" style="--typing-length: 16;">
          Hola, Soy Lucas!
          <a
            href="https://github.com/GetToated"
            class="flex justify-center items-center text-sm md:text-base"
            target="_blank"
            rel="noopener"
          >
            <Badge>Disponible para trabajar.</Badge>
          </a>
        </h1>
      </div>
      <h2 class="text-xl md:text-2xl mt-2 md:mx-2 sm:mx-2 text-center sm:text-left">
        Trainer a punto de finalizar practicas del
        <span class="text-yellow-200/90">Grado superior DAW</span>.
        <span class="text-red-100/90 block sm:inline">
          Con interes en el desarrollo frontend.
        </span>
      </h2>

      <nav class="flex flex-col sm:flex-row gap-4 mt-8 justify-center sm:justify-start social-links">
        <Social href="https://github.com/GetToated">
          <Github class="size-6" />
          <span class="hidden sm:inline">Github</span>
        </Social>
        <Social href="https://www.linkedin.com/in/lucas-v%C3%A1zquez-segura-4a46b135a/">
          <Linkedin class="size-6" />
          <span class="hidden sm:inline">LinkedIn</span>
        </Social>
        <Social href="">
          <Mail class="size-6" />
          <span class="hidden sm:inline">lucasfpinformatica@gmail.com</span>
        </Social>
      </nav>
    </SectionContainer>
    <AboutMe />
    <SectionContainer class="pb-23" id="experience">
      <h2 class="font-semibold text-2xl mb-7 flex gap-x-3 items-center sm:mx-10">
        <Experienceicon class="size-8 " />
        Mi Experiencia
      </h2>
      <Experience />
    </SectionContainer>

    <Skills />
    <Projects />
    <ContactForm />
    <Footer />
  </main>

  <style>
    .typing-animation {
      overflow: hidden;
      white-space: nowrap;
      border-right: .15em solid orange; 
      animation: typing 3s steps(var(--typing-length), end), blink-caret .75s step-end infinite;
    }

    @keyframes typing {
      from { width: 0 }
      to { width: calc(var(--typing-length) * 1ch); }
    }

    @keyframes blink-caret {
      from, to { border-color: transparent }
      50% { border-color: orange; }
    }
  </style>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.body.classList.add('fade-in-page');
  });
</script>

<style>
  @media (max-width: 768px) {
    .typing-animation {
      font-size: 2.5rem; /* Reduce el tamaño del título en móviles */
      --typing-length: 14; /* Ajusta la longitud de la animación si es necesario */
      text-align: center; /* Centra el texto del título */
    }

    .text-2xl {
      font-size: 1.5rem; /* Reduce el tamaño del subtítulo en móviles */
      text-align: center; /* Centra el texto del subtítulo */
    }

    .h1-container { /* Un contenedor para el h1 y el badge */
      display: flex;
      flex-direction: column; /* Apila el título y el badge */
      gap: 0.5rem; /* Añade un poco de espacio entre ellos */
      align-items: center; /* Centra los elementos horizontalmente */
    }

    .social-links {
      flex-direction: row; /* Vuelve a poner los enlaces en fila */
      gap: 1rem; /* Aumenta un poco el espacio entre ellos */
      justify-content: center; /* Centra los enlaces horizontalmente */
      margin-top: 1rem; /* Añade un poco de margen superior */
    }

    .social-links .size-6 {
      size: 1.5rem; /* Reduce el tamaño de los iconos sociales si es necesario */
    }

    .social-links span {
      font-size: 0.9rem; /* Reduce el tamaño del texto de los enlaces sociales */
    }

    .rounded-full {
      margin-left: auto;
      margin-right: auto;
      display: block; /* Para que los márgenes automáticos funcionen */
    }
  }
</style>

<style is:global>
  @keyframes fadeInPage {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  body.fade-in-page {
    opacity: 0;
    animation: fadeInPage 0.8s ease-in-out forwards;
  }
</style>